@model Movie

@{
    ViewData["Title"] = "Registration Form";
}


<form asp-action="DisplayMovie" method="post">
    <label asp-for="Id"></label>
    <input type="number" asp-for="Id" value="@Model.Id" />
    @Html.ValidationMessageFor(x => x.Id)    <!--this is a lambda expression for validation-->
    <br />

    <label asp-for="Title"></label>
    <input type="text" asp-for="Title" value="@Model.Title" required />
    <br />

    <label asp-for="Genre">Genre</label>
     <select name="Genre">
        <option value=""></option>
        <option value="Action">Action</option>
        <option value="Comedy">Comedy</option>
        <option value="Horror">Horror</option>
        <option value="Mystery/Thriller">Mystery/Thriller</option>
        <option value="Romance">Romance</option>
        <option value="Sci-fi">Sci-fi</option>
    </select>
   <br />
   

    <label asp-for="Year"></label>
    <input type="datetime" min="1880" max="{{datetime-local}}" asp-for="Year" value="@Model.Year.ToString("yyyy")" />
    <br />

    <label asp-for="Actors"></label>
    <input type="text" asp-for="Actors" value="@Model.Actors" />
    <br />

    <label asp-for="Directors"></label>
    <input type="text" asp-for="Directors" value="@Model.Directors" />
    <br />

    <input type="submit" value="Register Movie" />
</form>
